/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
		And(a=a, b=sel, out=w1); // a=1, b=0, out=1
		And(a=b, b=sel, out=w2); // a=0, b=0, out=0
		Or(a=w1,b=w2, out=out); // a=1, b=0, out=1
}
